<% layout("/layouts/boilerplate.ejs") %>

<style>
  :root {
    --primary-color: white;
    --secondary-color: #222;
    --nav-color: #222222;
    --footer-color: #f1efef;
  }

  .dark-theme {
    --primary-color: #35374b;
    --secondary-color: white;
    --nav-color: white;
    --footer-color: #35374b;
  }

  body {
    background-color: var(--primary-color);
    color: var(--secondary-color);
  }

  .amenities-btn {
    color: var(--secondary-color);
  }

  .card-title {
    color: var(--secondary-color);
  }

  .review-body {
    background-color: var(--primary-color);
  }

  .review-body:hover {
    box-shadow: 5px 5px 10px var(--secondary-color);
    transition: 1s;
    cursor: pointer;
  }
</style>

<script>
  const mapToken = "<%= process.env.MAP_TOKEN %>";
  const listing = <%- JSON.stringify(listing) %>;
</script>

<div class="row mt-3">
  <div class="col-8 offset-2">
    <h3><%= listing.title %></h3>

    <div class="show-card show-card listing-card" style="width: 18rem">
      <img
        src="<%= listing.image.url %>"
        class="card-img-top show-img"
        alt="listing_image"
      />
      <div class="card-body">
        <p class="card-text"><b>Owned By:</b> <%= listing.owner.username%></p>
        <p class="card-text"><b>Details: </b><%= listing.description %></p>
        <p class="card-text">
          <b>Price: </b>
          &#8377; <%= listing.price.toLocaleString("en-IN") %>
        </p>
        <p class="card-text"><b>Location: </b><%= listing.location %></p>
        <p class="card-text"><b>Country: </b><%= listing.country %></p>
      </div>
    </div>

    <% if(currUser && listing.owner._id.equals(currUser._id)) { %>
    <div class="btns mb-5">
      <a
        href="/listings/<%= listing._id %>/edit"
        class="btn btn-dark col-1 edit-btn"
        >Edit</a
      >
      <form method="POST" action="/listings/<%=listing._id%>?_method=DELETE">
        <button class="btn btn-dark offset-2">Delete</button>
      </form>
    </div>
    <% } %>
  </div>

  <div class="col-8 offset-2 mb-3">
    <h4><b>What this place offers</b></h4>
    <hr />
    <div class="mt-2">
      <i class="fa-solid fa-wifi"></i>&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;<b>Wifi</b>
    </div>
    <div class="mt-2">
      <i class="fa-solid fa-car"></i>&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;<b
        >Free parking on premises</b
      >
    </div>
    <div class="mt-2">
      <i class="fa-solid fa-bath"></i>&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;<b>Bath</b>
    </div>
    <div class="mt-2">
      <i class="fa-solid fa-paw"></i>&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;<b
        >Pets allowed</b
      >
    </div>
    <div class="mt-2">
      <i class="fa-solid fa-house-fire"></i>&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;<b
        >Indoor fireplace</b
      >
    </div>
    <div class="mt-3">
      <button type="button" class="btn btn-outline-dark amenities-btn">
        <b>Show all amenities</b>
      </button>
    </div>
  </div>

  <% if(currUser) { %>
  <div class="col-8 offset-2 mb-3">
    <hr />
    <h4><b>Give a Review</b></h4>
    <form
      action="/listings/<%= listing.id %>/reviews"
      method="POST"
      novalidate
      class="needs-validation"
    >
      <div class="mb-3 mt-3">
        <label for="name" class="form-label">Name</label>
        <input type="text" class="form-control" required name="review[name]" />
        <div class="invalid-feedback">Please add your Name</div>
      </div>
      <div class="mb-3 mt-3">
        <label for="rating" class="form-label">Rating</label>
        <fieldset class="starability-slot">
          <input
            type="radio"
            id="no-rate"
            class="input-no-rate"
            name="review[rating]"
            value="1"
            checked
            aria-label="No rating."
          />
          <input
            type="radio"
            id="first-rate1"
            name="review[rating]"
            value="1"
          />
          <label for="first-rate1" title="Terrible">1 star</label>
          <input
            type="radio"
            id="first-rate2"
            name="review[rating]"
            value="2"
          />
          <label for="first-rate2" title="Not good">2 stars</label>
          <input
            type="radio"
            id="first-rate3"
            name="review[rating]"
            value="3"
          />
          <label for="first-rate3" title="Average">3 stars</label>
          <input
            type="radio"
            id="first-rate4"
            name="review[rating]"
            value="4"
          />
          <label for="first-rate4" title="Very good">4 stars</label>
          <input
            type="radio"
            id="first-rate5"
            name="review[rating]"
            value="5"
          />
          <label for="first-rate5" title="Amazing">5 stars</label>
        </fieldset>
      </div>
      <div class="mb-3 mt-3">
        <label for="comment" class="form-label">Comment</label>
        <textarea
          class="form-control"
          name="review[comment]"
          id="comment"
          cols="20"
          rows="5"
          required
        ></textarea>
        <div class="invalid-feedback">Please add some review comment</div>
      </div>
      <button class="btn btn-dark submit-btn">Submit</button>
    </form>
    <% } %>
    <hr />
  </div>

  <% if(listing.reviews.length>0) { %>
  <div class="col-6 offset-2">
    <div class="row">
      <p><b>All Reviews</b></p>
      <% for(review of listing.reviews) { %>
      <div class="card col-5 ms-3 mb-3 review-body">
        <div class="card-body mt-2">
          <h5 class="card-title"><%= review.author.username %></h5>
          <p
            class="starability-result card-text"
            data-rating="<%= review.rating %>"
          ></p>
          <p class="card-text"><%= review.comment %></p>
          <form
            class="mb-3"
            method="POST"
            action="/listings/<%= listing._id %>/reviews/<%= review._id %>?_method=DELETE"
          >
            <button class="btn btn-sm btn-dark">Delete</button>
          </form>
        </div>
      </div>
      <% } %>
    </div>
    <% } %>
  </div>
  <div class="col-8 offset-2 mb-3">
    <h4>Where you'll be</h4>
    <div id="map"></div>
  </div>
</div>

<script src="/js/map.js"></script>
