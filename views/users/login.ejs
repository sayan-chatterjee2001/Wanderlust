<% layout("/layouts/boilerplate") %>
<style>
  :root {
    --primary-color: white;
    --secondary-color: #222;
    --nav-color: #222222;
    --footer-color: #f1efef;
  }

  .dark-theme {
    --primary-color: #35374B; 
    --secondary-color: white;
    --nav-color: white;
    --footer-color: #35374B;
  }

  body {
    background-color: var(--primary-color);
    color: var(--secondary-color);
  }
</style>

<div class="row mt-3">
  <h3 class="col-6 offset-3 mb-3">Login for WanderLust</h3>
  <div class="col-6 offset-3">
    <form action="/login" method="POST" class="needs-validation" novalidate>
      <div class="mb-3">
        <label for="username" class="form-label">Username</label>
        <input
          type="text"
          name="username"
          id="username"
          placeholder="Enter username"
          class="form-control"
          required
        />
      </div>
      <div class="mb-3">
        <label for="password" class="form-label">Password</label>
        <input
          type="password"
          name="password"
          id="password"
          class="form-control"
          required
        />
      </div>
      <button class="btn btn-success mb-3";">Login</button>
    </form>
  </div>
</div>
